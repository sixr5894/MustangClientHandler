<Window x:Class="MustangClientHandler.GetPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MustangClientHandler"
        mc:Ignorable="d"
        Title="GetPayment" Height="180" Width="400">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.359"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <TextBox Name="SumText" HorizontalAlignment="Left" Height="23" Margin="57,47,0,0" TextWrapping="Wrap" Text="Enter sum" Foreground="LightGray" VerticalAlignment="Top" Width="280" IsKeyboardFocusedChanged="SumText_IsKeyboardFocusedChanged" LostKeyboardFocus="SumText_LostKeyboardFocus" TextChanged="SumText_TextChanged"/>
        <Button Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Left" Margin="131,106,0,0" VerticalAlignment="Top" Width="75" Click="ConfirmButton_Click"/>
        <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="262,106,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>

    </Grid>
</Window>
